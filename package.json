{
  "name": "crypto-wallet-platform",
  "version": "1.0.0",
  "description": "Secure cryptocurrency wallet platform with live prices and transactions",
  "main": "server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon backend/server.js",
    "client": "cd frontend && npm start",
    "db:up": "docker compose up -d mongo",
    "db:down": "docker compose down",
    "db:logs": "docker compose logs -f mongo",
    "install-all": "npm install && cd frontend && npm install",
    "create-test-user": "node backend/scripts/createTestUser.js",
    "seed:demo-users": "node backend/scripts/seedDemoUsers.js",
    "make-admin": "node backend/scripts/makeAdmin.js",
    "test": "jest --config jest.config.js --runInBand",
    "test:watch": "jest --config jest.config.js --watch",
    "test:coverage": "jest --config jest.config.js --coverage",
    "test:auth": "jest --config jest.config.js --testPathPattern=auth.test.js",
    "test:kms": "jest --config jest.config.js --testPathPattern=kms.test.js",
    "test:websocket": "jest --config jest.config.js --testPathPattern=websocket.test.js",
    "test:cookies": "jest --config jest.config.js --testPathPattern=cookies-csrf.test.js",
    "test:critical": "jest --config jest.config.js --testPathPattern='(auth|kms|websocket|cookies)' --coverage",
    "test:ci": "jest --config jest.config.js --runInBand --coverage --passWithNoTests"
  },
  "keywords": [
    "crypto",
    "wallet",
    "blockchain"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.97.0",
    "axios": "^1.7.9",
    "bcryptjs": "^2.4.3",
    "bip32": "^5.0.0",
    "bip39": "^3.1.0",
    "bitcoinjs-lib": "^6.1.5",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "crypto": "^1.0.1",
    "csrf-csrf": "^4.0.3",
    "dotenv": "^16.3.1",
    "ethers": "^6.7.1",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.3.1",
    "helmet": "^8.1.0",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.5.0",
    "pg": "^8.11.0",
    "redis": "^4.7.0",
    "tiny-secp256k1": "^2.2.3",
    "ws": "^8.14.2",
    "zod": "^4.3.6"
  },
  "overrides": {
    "lodash": "^4.17.23",
    "valibot": "^1.2.0"
  },
  "devDependencies": {
    "concurrently": "^8.2.1",
    "jest": "^29.7.0",
    "mongoose": "^7.5.0",
    "nodemon": "^3.0.1",
    "socket.io": "^4.8.3",
    "socket.io-client": "^4.8.3",
    "supertest": "^6.3.3"
  }
}
