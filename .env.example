# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB
MONGODB_URI=mongodb://localhost:27017/crypto-wallet

# Cookie/JWT (required in production; dev has safe fallbacks)
COOKIE_SECRET=your_cookie_secret_here_change_in_production

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here_change_in_production

# Blockchain RPC URLs
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID
POLYGON_RPC_URL=https://polygon-rpc.com
BSC_RPC_URL=https://bsc-dataseed.binance.org
BTC_API_URL=https://blockstream.info/api

# Blockchain Explorer API Keys
ETHERSCAN_API_KEY=
POLYGONSCAN_API_KEY=
BSCSCAN_API_KEY=

# Blockchair API (Multi-chain blockchain explorer)
# Get free key at: https://blockchair.com/api
# Free tier: 1,440 requests/day
BLOCKCHAIR_API_KEY=
USE_BLOCKCHAIR_FOR_BTC=true
USE_BLOCKCHAIR_FALLBACK=true

# CoinGecko API (for live prices)
COINGECKO_API_KEY=your_coingecko_api_key_optional

# Encryption Key (32 bytes hex)
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# TLS (required for HTTPS server)
TLS_KEY_PATH=
TLS_CERT_PATH=

# Test user script (backend/scripts/createTestUser.js)
TEST_USER_EMAIL=
TEST_USER_PASSWORD=
TEST_USER_NAME=

# Demo admin seeding (backend/scripts/seedDemoUsers.js)
TEST_ADMIN_EMAIL=
TEST_ADMIN_PASSWORD=
TEST_ADMIN_NAME=

# Admin access behavior
ADMIN_ALLOW_REMOTE=false
ADMIN_ALLOWED_IPS=127.0.0.1,::1
