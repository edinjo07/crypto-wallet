# Environment variables for testing

# Database
MONGO_URI_TEST=mongodb://localhost:27017/crypto-wallet-test
REDIS_URL_TEST=redis://localhost:6379/1

# JWT - Will be generated at runtime if not set
# JWT_SECRET=<generated-dynamically>
JWT_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=30d

# KMS - Will be generated at runtime if not set
# KMS_MASTER_KEY=<generated-dynamically>

# Security - Will be generated at runtime if not set
# COOKIE_SECRET=<generated-dynamically>
REQUIRE_HTTPS=false

# Logging
LOG_LEVEL=error

# API
API_PORT=3001
NODE_ENV=test
